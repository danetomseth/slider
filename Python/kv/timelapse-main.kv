
<TimelapseMain>:
	BoxLayout:
		spacing: 5
		orientation: 'vertical'
		
		PageTitle
    		title: root.page_title
		BoxLayout:
			padding: 10
			spacing: 10
			BoxLayout:
				
				spacing: 10
				orientation: 'vertical'
				id: parent_box
				AnchorLayout:
					anchor_x: 'center'
					anchor_y: 'center'
					BoxLayout:
						orientation: 'vertical'
						Button:
							size_hint_y: 0.5
							text: 'QUICK TIMELAPSE'
							font_size: 20
							on_press: root.manager.current = 'timelapse_simpleA'
						Button:
							size_hint_y: 0.5
							text: 'ADVANCED TIMELAPSE'
							font_size: 20
							on_press: root.manager.current = 'timelapse_advancedA'
			BoxLayout:
				size_hint_x: 0.25
				Button:
					text: 'BACK'
					on_press: root.manager.current = 'home'

