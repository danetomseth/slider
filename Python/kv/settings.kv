		step_mode_tab: step_mode_tab
		control_tab: control_tab
		camera_tab: camera_tab
		motors_tab: motors_tab
		manager: root.manager
		AccordionItem:
			title: 'STEP MODE'
			StepMode:
				id: step_mode_tab
				manager: settings_manager.manager
		AccordionItem:
			title: 'CONTROL SETTINGS'
			ControlTab:
				id: control_tab
				manager: settings_manager.manager
		AccordionItem:
			title: 'CAMERA SETTINGS'
			CameraTab:
				id: camera_tab
				manager: settings_manager.manager
		AccordionItem:
			title: 'MOTORS'
			MotorsTab:
				id: motors_tab
				manager: settings_manager.manager